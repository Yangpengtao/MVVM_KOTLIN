<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".ui.view.my_wallet.WithdrawDepositActivity">

	<TextView
		style="@style/LeftParentMargin"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:text="可提现余额33.3元"
		android:textColor="@color/red"
		android:textSize="@dimen/sp_14" />

	<LinearLayout
		style="@style/ParentMargin"
		android:layout_width="match_parent"
		android:layout_height="44dp"
		android:layout_marginTop="30dp"
		android:gravity="center_vertical"
		android:orientation="horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="银行账户"
			android:textColor="@color/color333"
			android:textSize="@dimen/sp_16" />

		<TextView
			style="@style/LeftParentMargin"
			android:layout_width="match_parent"
			android:textColor="@color/color666"
			android:layout_height="wrap_content"
			android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
			android:gravity="center_vertical"
			android:text="中国工商银行（5666）"
			android:textSize="@dimen/sp_14" />
	</LinearLayout>

	<View
		style="@style/ParentMargin"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/lineColor" />

	<LinearLayout
		style="@style/ParentMargin"
		android:layout_width="match_parent"
		android:layout_height="44dp"
		android:gravity="center_vertical"
		android:orientation="horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="提现金额"
			android:textColor="@color/color333"
			android:textSize="@dimen/sp_16" />

		<androidx.appcompat.widget.AppCompatEditText
			style="@style/LeftParentMargin"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@android:color/transparent"
			android:hint="单词提现100元免手续费"
			android:maxLines="1"
			android:textColor="@color/color333"
			android:textColorHint="@color/color999"
			android:textSize="@dimen/sp_14" />
	</LinearLayout>

	<View
		style="@style/ParentMargin"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/lineColor" />

	<Button
		style="@style/BtnNormal.ParentMargin"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:layout_marginTop="30dp"
		android:text="提现"
		android:textColor="@color/color333"
		android:textSize="@dimen/sp_16" />

	<TextView
		style="@style/LeftParentMargin"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:text="1.提现手续费1元/次，单次满100元免手续费"
		android:textColor="@color/color666"
		android:textSize="@dimen/sp_14" />

	<TextView
		style="@style/LeftParentMargin"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:text="2.根绝银行情况1-3个工作日到账"
		android:textColor="@color/color666"
		android:textSize="@dimen/sp_14" />
</LinearLayout>