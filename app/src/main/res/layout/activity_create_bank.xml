<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".ui.view.my_wallet.WithdrawDepositActivity">

	<TextView
		style="@style/LeftParentMargin"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:text="q请帮定您本人名下的银行卡"
		android:textColor="@color/btnNormal"
		android:textSize="@dimen/sp_14" />

	<LinearLayout
		style="@style/ParentMargin"
		android:layout_width="match_parent"
		android:layout_height="44dp"
		android:layout_marginTop="30dp"
		android:gravity="center_vertical"
		android:orientation="horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="持卡人姓名"
			android:textColor="@color/color333"
			android:textSize="@dimen/sp_16" />

		<TextView
			style="@style/LeftParentMargin"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"

			android:gravity="center_vertical"
			android:text="张xx"
			android:textColor="@color/color333"
			android:textSize="@dimen/sp_14" />
	</LinearLayout>

	<View
		style="@style/ParentMargin"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/lineColor" />

	<LinearLayout
		style="@style/ParentMargin"
		android:layout_width="match_parent"
		android:layout_height="44dp"
		android:gravity="center_vertical"
		android:orientation="horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="银行卡号"
			android:textColor="@color/color333"
			android:textSize="@dimen/sp_16" />

		<androidx.appcompat.widget.AppCompatEditText
			style="@style/LeftParentMargin"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@android:color/transparent"
			android:hint="请输入本人的银行卡号"
			android:maxLines="1"
			android:textColor="@color/color333"
			android:textColorHint="@color/color999"
			android:textSize="@dimen/sp_14" />
	</LinearLayout>

	<View
		style="@style/ParentMargin"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/lineColor" />

	<LinearLayout
		style="@style/ParentMargin"
		android:layout_width="match_parent"
		android:layout_height="44dp"
		android:gravity="center_vertical"
		android:orientation="horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="所在银行"
			android:textColor="@color/color333"
			android:textSize="@dimen/sp_16" />

		<TextView
			style="@style/LeftParentMargin"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@android:color/transparent"
			android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
			android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
			android:gravity="center_vertical"
			android:maxLines="1"
			android:text="请选择所在银行"
			android:textColor="@color/color999"
			android:textColorHint="@color/color999"
			android:textSize="@dimen/sp_14" />
	</LinearLayout>

	<View
		style="@style/ParentMargin"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/lineColor" />

	<Button
		android:id="@+id/btn_confirm"
		style="@style/BtnNormal.ParentMargin"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:layout_marginTop="30dp"
		android:text="确定绑定"
		android:textColor="@color/color333"
		android:textSize="@dimen/sp_16" />
</LinearLayout>