<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".ui.view.account.SetPasswordActivity">

	<TextView
		android:id="@+id/tvRemark"
		style="@style/LeftParentMargin"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="36dp"
		android:text="设置登陆密码"
		android:textColor="@color/color333"
		android:textSize="@dimen/sp_24" />

	<TextView
		android:id="@+id/tvRemark2"
		style="@style/LeftParentMargin"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="36dp"
		android:text="设置成功后可用账号密码登录"
		android:textColor="@color/color999"
		android:textSize="@dimen/sp_18" />

	<LinearLayout
		style="@style/ParentMargin"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="60dp"
		android:gravity="center_vertical"
		android:orientation="horizontal">


		<androidx.appcompat.widget.AppCompatEditText
			android:id="@+id/etPassword"
			style="@style/EtNormal"
			android:layout_width="0dp"
			android:layout_height="50dp"
			android:layout_weight="1"
			android:drawablePadding="10dp"
			android:gravity="center_vertical"
			android:hint="请输入6位以上数字或字母"
			android:textColor="@color/color333"
			android:textColorHint="@color/color666"
			android:textSize="@dimen/sp_14" />

		<androidx.appcompat.widget.AppCompatCheckBox
			android:id="@+id/cbPassword"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="@dimen/parent_margin" />

	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/splitLine" />


	<Button
		android:id="@+id/btnFinish"
		style="@style/BtnNormal.ParentMargin"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:layout_marginTop="30dp"
		android:text="设置完成"
		android:textColor="#2b201d"
		android:textSize="18sp" />


</LinearLayout>